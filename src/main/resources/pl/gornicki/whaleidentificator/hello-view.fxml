<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ProgressIndicator?>
<VBox alignment="CENTER" spacing="30.0" fx:id="parentContainer" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.gornicki.whaleidentificator.HelloController">
    <Button style="-fx-font-size: 18px;" prefHeight="40" prefWidth="150" text="Browse..." onAction="#browseFile"/>
    <Label fx:id="selectFileLabel" style="-fx-font-size: 18px;" text="Selected File: " visible="false"/>
    <ImageView fx:id="imageView" preserveRatio="true" visible="false" managed="false"/>
    <ProgressIndicator fx:id="loadingIndicator" visible="false" managed="false"/>
    <Label fx:id="outputLabel" style="-fx-font-size: 18px;" wrapText="true"/>
</VBox>
